<div class="container">
    <div class="top-bar">
        <!-- more -->
        <button
            class="top-bar__more d-none d-lg-block js-toggle"
            toggle-target="#navbar"
        >
            <img
                src="./icons/more.svg"
                alt=""
                class="icon top-bar__more-icon"
            />
        </button>

        <!-- logi -->
        <a href="/" class="logo">
            <img src="./icons/logo.svg" alt="grocerymart" class="logo__img" />
            <h1 class="logo__title">MÁY LÀM ĐÁ</h1>
        </a>
        <!-- nabar -->
        <nav id="navbar" class="navbar">
            <button
                class="navbar__close-btn d-none d-lg-block js-toggle"
                toggle-target="#navbar"
            >
                <img src="./icons/arrow-left.svg" alt="" class="icon" />
            </button>
            <a href="#!" class="nav-btn d-none d-md-flex">
                <img src="./icons/buy.svg" alt="" class="icon nav-btn__icon" />
                <span class="nav-btn__title">Card</span>
                <span class="nav-btn__qty">{{Amt_Card}}</span>
            </a>
            <a href="#!" class="nav-btn d-none d-md-flex">
                <img
                    src="./icons/heart.svg"
                    alt=""
                    class="icon nav-btn__icon"
                />
                <span class="nav-btn__title">Favorite</span>
                <span class="nav-btn__qty">{{Qty_Love}}</span>
            </a>

        </nav>
        <div class="navbar--overlay js-toggle" toggle-target="#navbar"></div>
        <!-- actions -->
        <div class="top-act">

            <div class="top-act__group">
                <div class="top-act__btn-wrap">
                    <button id="btn_card_item_love" class="top-act__btn">
                        <img
                            src="./icons/heart.svg"
                            alt=""
                            class="icon top-act__icon"
                        />
                        <span class="top-act__title">{{Qty_Love}}</span>
                    </button>
                    {{! dropdown }}
                    <div class="act-dropdown">
                        <div class="act-dropdown__inner">
                            <img
                                src="./icons/arrow-up.png"
                                alt=""
                                class="act-dropdown__arrow"
                            />
                            <div class="act-dropdown__top">
                                <h2 class="act-dropdown__title">Sản phẩm yêu
                                    thích</h2>
                                <input
                                    type="text"
                                    id="Cart_html_love"
                                    value="{{Trans_love}}"
                                    hidden
                                />

                            </div>
                            <div
                                id="html_card_Item_love"
                                class="row row-cols-3 gx-2 act-dropdown__list"
                            >

                            </div>

                            <div
                                class="act-dropdown__checkout act-dropdown__checkout-btn"
                            >

                                <button
                                    class="btn btn--primary act-dropdown__checkout-btn btn--rounded"
                                >Sản phẩm yêu thích</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="top-act__separate"></div>
                <div class="top-act__btn-wrap">
                    <button id="btn_card_item" class="top-act__btn">
                        <img
                            src="./icons/buy.svg"
                            alt=""
                            class="icon top-act__icon"
                        />
                        <span class="top-act__title">{{Amt_Card}}</span>

                    </button>
                    {{! dropdown }}
                    <div class="act-dropdown">
                        <div class="act-dropdown__inner">
                            <img
                                src="./icons/arrow-up.png"
                                alt=""
                                class="act-dropdown__arrow"
                            />
                            <div class="act-dropdown__top">
                                <h2 class="act-dropdown__title">Đơn hàng mới
                                    nhất</h2>
                                <input
                                    type="text"
                                    id="Cart_html"
                                    value="{{Trans}}"
                                    hidden
                                />

                            </div>
                            <div
                                id="html_card_Item"
                                class="row row-cols-3 gx-2 act-dropdown__list"
                            >

                            </div>
                            <div class="act-dropdown__bottom">
                                <div class="act-dropdown__row">
                                    <span
                                        class="act-dropdown__label"
                                    >Tổng:</span>
                                    <span
                                        class="act-dropdown__value"
                                    >{{Amt}}</span>
                                </div>
                                <div class="act-dropdown__row">
                                    <span class="act-dropdown__label">Phí vận
                                        chuyển:</span>
                                    <span
                                        class="act-dropdown__value"
                                    >{{Ship_Amt}}</span>
                                </div>
                                <div
                                    class="act-dropdown__row act-dropdown__row--bold"
                                >
                                    <span class="act-dropdown__label">Tổng đơn
                                        hàng:</span>
                                    <span
                                        class="act-dropdown__value"
                                    >{{Amt_Card}}</span>
                                </div>
                            </div>
                            <div
                                class="act-dropdown__checkout act-dropdown__checkout-btn"
                            >
                                <button class="act-dropdown__view-all">Tất cả
                                    đơn hàng</button>

                                <button
                                    class="btn btn--primary act-dropdown__checkout-btn btn--rounded"
                                >Đặt hàng</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- avatar -->
            <div class="top-act__user">
                <a href="/nguoidung" class="">
                    <img
                        src="{{User_Avarta}}"
                        {{! "./icons/avatar.svg" }}
                        alt=""
                        class="top-act__avatar"
                    />
                </a>

            </div>
        </div>
    </div>
</div>